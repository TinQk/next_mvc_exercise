<main class="content">
	<div class="container-fluid p-0">

		<h1 class="h3 mb-3">Items</h1>

		<div class="row">
			<div class="col-12">

				<div class="card">
					<div class="table-responsive">
						<table class="table table-striped table-hover">
							<thead>
								<tr>
									<th>Id de l'item</th>
									<th>Prix de d√©part</th>
									<th>Pourcentage de remise</th>
									<th>Prix</th>
									<th></th>
								</tr>
							</thead>
							<tbody>

								<% @items.order(:id).each do |item| %>
									<tr>
										<td><%= item.id %></td>
										<td><%= item.original_price %></td>

										<%= form_for :item, :url => administration_item_path(item.id), :method => :put do |f| %>
											<td><%= f.text_field :discount_percentage, placeholder: "#{item.discount_percentage}", class: 'form_discount', step: :any, within: 0..100 %></td>											
											<td><%= item.price %></td>
											<td><%= f.submit %></td>
										<% end %>
									</tr>
								<% end %>

							</tbody>
						</table>
					</div>
				</div>

			</div>
		</div>

	</div>
</main>
